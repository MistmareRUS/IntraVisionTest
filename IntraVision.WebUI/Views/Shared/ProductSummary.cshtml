@model IntraVision.Domain.Entities.Product

<div class="item">
    <h3>@Model.Name</h3>
    <h4>@Model.Price.ToString("c")</h4>
    @using (Html.BeginForm("AddToCart", "Cart"))
    {
        @Html.HiddenFor(x => x.Id)
        @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
        <input type="submit" value="+" />
    }
</div>